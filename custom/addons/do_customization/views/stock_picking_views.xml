        <!-- Form View -->                        
		<record id="do_picking_stock_modified_form_view_inherit" model="ir.ui.view">
            <field name="name">Delivery Stock DO</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="odoo_marketplace.marketplace_picking_stock_modified_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_validate']" position="replace">
                    <button name="button_validate" attrs="{'invisible': ['|', '|',('is_admin_approved', '=', False),
                    		('state', '!=', 'assigned')]}" string="Validate" 
                    		type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//button[@name='button_validate']" position="after">
                    <button name="set_as_hold" string="Set as Hold" attrs="{'invisible': ['|', ('hold_reason', '=', False), ('hold_state', '=', True)]}"  type="object"/>
                    <button name="make_ready" string="Make Ready" attrs="{'invisible': ['|', ('hold_state', '!=', True), ('state', '!=', 'assigned')]}"  type="object"/>
                </xpath>
                <xpath expr="//field[@name='move_type']" position="before">
                    <field name="payment_provider" readonly="1"/>
                    <field name="is_admin_approved" readonly="1"/>
                    
               </xpath>
			   <xpath expr="//field[@name='location_dest_id']" position="after">
					<field name="journal_id" string="Payment Type" attrs="{ 'readonly': [('state', '=', 'done')]}" />
                    <field name="receivable_amount" string="To Receive" attrs="{'invisible': ['|',('journal_id', '=', False),('state', '=', 'done')]}" />
                    <field name="paid_amount" attrs="{'invisible': [('journal_id', '=', False)],  'readonly': [('state', '=', 'done')]}" />
                    
                    <field name="payment_remark" attrs="{'invisible': [('journal_id', '=', False)], 'readonly': [('state', '=', 'done')]}" />
                    <field name="payment_upload" filename="payment_upload_name" attrs="{'invisible': [('paid_amount', '&lt;=', '0.0')], 'readonly': [('state', '=', 'done')]}" />
                    <field name="payment_upload_name" invisible="1" />
                    
                    <field name="is_picked" invisible="1" />
                    <field name="is_packaged" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="vendor_id"  domain="[('delivery_vendor', '=', True)]" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" required='1'/>
                    <field name="delivery_method_id" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" />
                    <field name="hold_reason" attrs="{'invisible': [('state', '!=', 'assigned')]}" />
                    <field name="hold_state" string="To Receive" invisible="1"/>
                    <field name="hold_date" string="To Receive" invisible="1"/>
                    <field name="required_condition" invisible="1" />
               </xpath>
               
               <xpath expr="//button[@name='action_toggle_is_locked']" position="replace" />               
              
            </field>
        </record>

