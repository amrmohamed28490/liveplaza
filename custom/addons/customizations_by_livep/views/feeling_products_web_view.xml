<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
      <template id="feeling_products_assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/customizations_by_livep/static/src/css/style.css"/>
        </xpath>
    </template>

      <template id="feeling_products_categories" name="Feeling Product Categories">
          <t t-if="len(feeling) > 0">
          <section class="container">
               <div class="oe_structure oe_empty feeling_div">
                   <p class="feeling_title">How are you feeling today?</p>
                    <div class="feeling_outer_box" id="scroll_x">
                          <t t-foreach="feeling" t-as="f" >
                                  <a class="feeling_category" t-attf-href="/shop/feeling/#{ slug(f) }">
                                      <p class="feeling_text"><t t-esc="f.name"></t></p>
                                          <span t-field="f.feeling_emoji"
                                        t-options="{'widget': 'image', 'preview_image': 'feeling_emoji' }"
                                        class="feeling_emoji d-flex h-100 justify-content-center align-items-center"/>
                                  </a>
                          </t>
                    </div>
               </div>
          </section>
          </t>
      </template>

      <template id="feeling_header_shop_page" inherit_id="website_sale.products" priority="2">
        <xpath expr="//div[@id='products_grid']/div[hasclass('o_wsale_products_grid_table_wrapper')]" position="before">
            <div class="xt_outer_container ">
                <div  class="xt_container ">
                    <t t-set="xt_product" t-value="'All Products'" />
                    <ul id="xt_category">
                        <li t-foreach="all_categories" t-as="xt_category">
                            <t t-if="xt_category.get('url')">
                                <a t-att-href="xt_category.get('url')">
                                    <span><t t-esc="xt_category.get('name')" /></span>
                                </a>
                                <i class="fa fa-chevron-right" />
                            </t>
                            <t t-if="not xt_category.get('url')">
                                <t t-set="xt_product" t-value="xt_category.get('name')" />
                                <span class="final"><t t-esc="xt_category.get('name')" /></span>
                            </t>
                        </li>
                    </ul>
                    <h3 class="xt_product_count_heading"><t t-esc="xt_product" /></h3>
                    <p style="font-size: 13px; font-weight: bold;">Showing
                        <t t-set="total_product" t-value="len(products)" />
                        <t t-set="current_product_list" t-value="(pager['page']['num']-1)*total_product if pager['page_count']!=pager['page']['num'] else search_count-total_product" />
                        <span class="xt_product_count"><t t-esc="(current_product_list+1) if total_product else '0'" /></span> To
                        <span class="xt_product_count xt_product_count-to"><t t-esc="current_product_list+total_product" /></span> of
                        <span class="xt_product_count"><t t-esc="search_count" /></span> Products
                    </p>
                    <div class="clr"></div>
                </div>
                <div class="feeling_header">
                    <t t-if="feeling">
                        <t t-if="search_count > 0" >
                            <h4>Hope you feel better! Here is the suggestion to help your <t t-esc="feeling.feeling_noun" /> </h4>
                        </t>
                    </t>
                </div>
            </div>

        </xpath>
      </template>

      <template id="homepage" name="Home" inherit_id="website.homepage">
          <xpath expr="//div[@id='wrap']" position="replace">
              <div id="wrap" class="oe_structure oe_empty">
                  <t t-call="theme_xtremo.xtremo_banner_with_category" />
                  <t t-call="customizations_by_livep.feeling_products_categories" />
                  <t t-call="theme_xtremo.xtremo_featured_product" />
                  <t t-call="theme_xtremo.xtremo_featured_top_sale" />
                  <t t-call="theme_xtremo.xtremo_featured_rated" />
              </div>
          </xpath>
      </template>

  </data>
</odoo>