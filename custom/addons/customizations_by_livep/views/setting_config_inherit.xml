<?xml version="1.0" encoding="utf-8"?> <!-- -->
<odoo>
    <record id="livep_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">livep.res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='base_geolocalize']" position="after">

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
			            <label for="domain"/>
			            <div class="text-muted">
			                Domain of the current site.
			            </div>
			            <div class="mt8">
			                <field name="domain" class="o_light_label"/>
			            </div>
			        </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>