<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="report_webview_document">

            <t t-foreach="docs" t-as="o">
                <t t-call="web.html_container">
                    
                    <style>
                                .webview_container{
                                    width: 100%;
                                    height: 100vh;
                                    display: flex;
                                    margin: 0;
                                    box-sizing: border-box;
                                }

                                .webview_container a{
                                    text-decoration: none;
                                }

                                .webview_container a span:hover{
                                    color: #0000ff !important;
                                }

                                .webview_container .left{
                                    width: 15%;
                                    height: 100%;
                                    position: sticky;
                                    overflow: hidden;
                                    border-right: 1px solid #E7E9EB;
                                }
                                
                                .webview_container .right{
                                    width: 85%;
                                    height: 100%;
                                    overflow-y: auto;
                                    padding: 8px;
                                }

                                .webview_container .left .nav_one{
                                    font-size: 20px !important;
                                    color: #212529 !important;
                                    font-weight: bold;
                                }

                                .webview_container .left .nav_two{
                                    font-size: 15px !important;
                                    color: #212529 !important;
                                }
                    </style>
                    <div class="webview_container">
                        <div class="left">
                            <h3>In this Document</h3>
                            <ul>
                                <li>
                                    <a class="reference internal nav_one" t-attf-href="o.category">
                                        <span t-field="o.category" />
                                    </a>
                                    <ul>
                                        <li>
                                            <a class="reference internal nav_two" t-attf-href="o.URL">
                                                <span t-field="o.title" />
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="right">
                            <table>
                                <tr>
                                    <td class="text-justify: auto;">
                                        <h1>
                                            <span t-field="o.title" />
                                        </h1>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-justify: auto;">
                                        <span t-field="o.contents" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>

    </data>

</odoo>